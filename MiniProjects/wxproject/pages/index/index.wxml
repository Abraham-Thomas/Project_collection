<!--index.wxml-->

<!-- 轮播图 -->
  <swiper indicator-dots="{{true}}" 
        autoplay="{{true}}" 
		circular="{{true}}"
        style="height: 400rpx;"
        indicator-active-color="#d1fd7e">

    <block wx:for="{{carousels}}" wx:for-item="pic" wx:key="pic.id">
      <swiper-item>
        <image src="{{pic.imageUrl}}" class="swiper-item-img" 
        data-itemId="{{pic.itemId}}"
        data-catId="{{pic.catId}}"
        data-searchType="{{pic.type}}"
        bindtap="showItemList"
        />
      </swiper-item>
    </block>

  </swiper>


  <!-- 商城特色 -->
  <view class="feature">
    <view>
      <image src="/resources/icon/smallIco/fang.png" class="feature-ico" />
      全场包邮
    </view>
    <view>
      <image src="/resources/icon/smallIco/flash.png" class="feature-ico" />
      先行赔付
    </view>
    <view>
      <image src="/resources/icon/smallIco/yuan.png" class="feature-ico" />
      7天无理由
    </view>
    <view>
      <image src="/resources/icon/smallIco/ling.png" class="feature-ico" />
      优先退款
    </view>
  </view>

   <!-- 推荐商品 -->
  <view class="title-items-list">
      <view class="title-tag">
        <image src="/resources/icon/smallIco/rec.png" class="title-ico" />
        推荐商品
      </view>
    </view>

	 <!-- 推荐商品列表 -->
	 <scroll-view class="scroll-rec-items" scroll-x="{{true}}">
    <block wx:for="{{featuresList}}" wx:key="item.id">
        <image src="{{item.cover}}" class="items-cover" data-itemId="{{item.id}}" bindtap="showItem"/>
    </block>
  </scroll-view>

    <!-- 商品上新列表 -->
  <view class="title-items-list">
      <view class="title-tag">
        <image src="/resources/icon/smallIco/diamond.png" class="title-ico" />
        商品上新
      </view>
  </view>

  <view class="new-item-list">
    
    <block wx:for="{{newItemList}}" wx:key="item.id">
      <view class="item-outter">

            <navigator url="/pages/query/item/item?itemId={{item.id}}" open-type="navigate">
                <image src="{{item.cover}}" class="new-item-cover" />
            </navigator>

        <view class="item-border">
            <block wx:for="{{item.tagList}}" wx:for-item="tag" wx:key="tag.id">
              <view class="tags">{{tag}}</view>
            </block>
        </view> 

        <view class="price-border">
          <view class="price">￥{{item.priceDiscountYuan}}</view>
          <view class="like-counts">
            {{item.likeCounts}}
            <image src="/resources/icon/smallIco/likes.png" class="like-ico" />
          </view>
        </view> 

      </view>
    </block>

  </view>


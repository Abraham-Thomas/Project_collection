page {
  flex: 1;
  display: flex;
  background: #f7f7f7;
}


/* 分割线 */
.line-outter {
  padding: 0 10rpx;
}
.line {
  background: #e5e5e5;
  width: 100%;
  height: 1px;
}

/* 为动画实例组件增加样式 */
.animation-img {
  margin-top: 20rpx;
  margin-left: 110rpx;
  height: 35rpx;
  width: 35rpx;
  border: solid 2rpx;
  border-color: #ff679a;
  border-radius: 50%;

  /* 背景图 */
  background-size: 100% 100%;
  background-repeat: no-repeat;

  position: absolute;
}
